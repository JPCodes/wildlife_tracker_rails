<%= render "layouts/errors", :object => @sighting %>

<%= form_for [@wildlife, @sighting] do |f| %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :latitude %>
  <%= f.text_field :latitude %>
  <%= f.label :longitude %>
  <%= f.text_field :longitude %>
  <%= f.select(:region, options_for_select([['Region 1', 'Region 1'],['Region 2', 'Region 2'], ['Region 3', 'Region 3']]), {}, { :class => 'browser-default drop-margin' } ) %>
  <%= f.submit :class => 'btn' %>
<% end %>
